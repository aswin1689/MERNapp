{
    "name": "mern-app",
    "version": "1.0.0",
    "description": "MERN app sample tutorial",
    "main": "index.js",
    "scripts": {
        "build": "webpack --config webpack.prod.js",
        "flow": "flow",
        "automate": "webpack-dev-server --open --config webpack.dev.js",
        "automate:watch": "npm run automate",
        "lint": "node_modules/.bin/esw src",
        "lint:watch": "npm run lint -- --watch",
        "test": "jest",
        "test:watch": "npm run test -- --watch",
        "server": "nodemon --exec babel-node src/server/server.js --ignore src/client/static",
        "start": "npm-run-all --parallel test:watch lint:watch automate:watch server"
    },
    "keywords": ["MongoDB", "Express", "React", "Redux", "Node"],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/aswin1689/MERNapp.git"
    },
    "author": "Aswin Alapati",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.18.0",
        "body-parser": "^1.18.2",
        "express": "^4.16.3",
        "foreman": "^2.0.0",
        "mongodb": "^3.0.5",
        "mongoose": "^5.0.12",
        "react": "^16.3.0",
        "react-dom": "^16.3.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.2",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "clean-webpack-plugin": "^0.1.19",
        "css-loader": "^0.28.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.3",
        "eslint": "^4.19.1",
        "eslint-plugin-import": "^2.10.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.7.0",
        "eslint-watch": "^3.1.4",
        "flow-bin": "^0.69.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.1.0",
        "jest": "^22.4.3",
        "node-sass": "^4.8.3",
        "nodemon": "^1.17.3",
        "npm-run-all": "^4.1.2",
        "sass-loader": "^6.0.7",
        "style-loader": "^0.20.3",
        "uglifyjs-webpack-plugin": "^1.2.4",
        "webpack": "^4.4.1",
        "webpack-cli": "^2.0.13",
        "webpack-dev-server": "^3.1.1",
        "webpack-merge": "^4.1.2"
    },
    "jest": {
        "setupFiles": ["./src/client/tests/setup.js"],
        "snapshotSerializers": ["enzyme-to-json/serializer"]
    }
}
